pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        dir('CDDBAPI') {
            sh 'docker compose up -d'
        }
      }
    }
    stage('Test') {
      steps {
        sh '''
          if curl http://localhost:8181/api/compactdiscs | grep -i coldplay
          then
            success=0
          else
            success=1
          fi
          exit $success
        '''
      }
    }
    stage('Publish') {
      steps {
        sh '''
          echo 'Publish to our containers repository'
          docker compose images
          echo "docker compose push"
        '''
      }
    }
    stage('Clean Up') {
      steps {
        sh '''
          docker compose kill
          docker compose down --rmi all -v
        '''
      }
    }
  }
}
